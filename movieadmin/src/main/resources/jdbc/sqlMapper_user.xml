<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.movieadmin.user">
	<insert id="U_INSERT" parameterType="com.project.movieadmin.user.UserVO">
		insert into
		user(user_id,password,nickname,gender,birth,tel,email)
		values(#{user_id},#{password},#{nickname},#{gender},#{birth},#{tel},#{email})
	</insert>

	<update id="U_UPDATE">
		update user set password=#{password},nickname=#{nickname},gender=#{gender},tel=#{tel},email=#{email} 
		where user_num=#{user_num}
	</update>

	<delete id="U_DELETE">
	delete from user where user_num=#{user_num}
	</delete>

	<select id="U_SELECT_ONE" resultType="com.project.movieadmin.user.UserVO">
		
	</select>

	
	<select id="U_SELECT_ALL_PAGE_BLOCK"
		resultType="com.project.movieadmin.user.UserVO">
		select * from user order by user_num desc limit ${startRow},${pageBlock}
	</select>


	<select id="U_SEARCHLIST_PAGE_BLOCK_ID"
		resultType="com.project.movieadmin.user.UserVO">
		
	</select>

	<select id="U_SEARCHLIST_PAGE_BLOCK_NAME"
		resultType="com.project.movieadmin.user.UserVO">
		
	</select>


	<select id="U_TOTAL_ROWS"	resultType="int">
		select count(*) total_rows from user
	</select>

	
	<select id="U_SEARCH_TOTAL_ROWS_ID"	resultType="int">
	
	</select>

	
	<select id="U_SEARCH_TOTAL_ROWS_NAME"	resultType="int">
		
	</select>

	
	<select id="U_LOGIN"	resultType="com.project.movieadmin.user.UserVO">
		
	</select>


</mapper>