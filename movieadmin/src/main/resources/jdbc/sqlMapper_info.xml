<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.movieadmin.info">
	<insert id="I_INSERT"
		parameterType="com.project.movieadmin.info.InfoVO">
		insert into
		info(title,nickname,genre,directors,actor,showtime,releaseDate,content,save_img,views,recommends,watchGrade,companys)
		values(#{title},'admin',#{genre},#{directors},#{actor},#{showtime},#{releaseDate},#{content},#{save_img},#{views},#{recommends},#{watchGrade},#{companys})
	</insert>

	<update id="UPDATE">

	</update>

	<delete id="DELETE">

	</delete>

	<select id="I_SELECT_ONE"
		resultType="com.project.movieadmin.info.InfoVO">
		select * from info where
		info_num=#{info_num}
	</select>

	<select id="SELECT_ALL"
		resultType="com.project.movieadmin.info.InfoVO">

	</select>

	<select id="I_SELECT_ALL_PAGE_BLOCK"
		resultType="com.project.movieadmin.info.InfoVO">
		select * from info order by info_num desc limit
		${startRow},
		${pageBlock}
	</select>


	<select id="SEARCHLIST_ID"
		resultType="com.project.movieadmin.info.InfoVO">

	</select>


	<select id="SEARCHLIST_NAME"
		resultType="com.project.movieadmin.info.InfoVO">

	</select>

	<select id="I_SEARCHLIST_PAGE_BLOCK_TITLE"
		resultType="com.project.movieadmin.info.InfoVO">
		select * from info
		where title like #{searchWord}
		order by releaseDate desc limit #{startRow},#{pageBlock}
	</select>

	<select id="I_SEARCHLIST_PAGE_BLOCK_GENRE"
		resultType="com.project.movieadmin.info.InfoVO">
		select * from info
		where genre like #{searchWord}
		order by releaseDate desc limit #{startRow},#{pageBlock}
	</select>
	
	<select id="I_SEARCHLIST_PAGE_BLOCK_ACTOR"
		resultType="com.project.movieadmin.info.InfoVO">
		select * from info
		where actor like #{searchWord}
		order by releaseDate desc limit #{startRow},#{pageBlock}
	</select>


	<select id="I_TOTAL_ROWS" resultType="int">
		select count(*) total_rows
		from info
	</select>


	<select id="SEARCH_TOTAL_ROWS_ID" resultType="int">

	</select>


	<select id="SEARCH_TOTAL_ROWS_NAME" resultType="int">

	</select>


	<select id="LOGIN"
		resultType="com.project.movieadmin.info.InfoVO">

	</select>

	<select id="I_INCREASE_VIEWS" resultType="com.project.movieadmin.info.InfoVO">
		update info set
		views=views+1 where
		info_num=#{info_num}
	</select>
	
	<select id="I_FAVORITE_CHECK" resultType="int">
        select count(*) as
        like_count
        from favoritecheck
        where user_id = #{user_id} and
        info_num = #{info_num} 

    </select>
    <select id="I_FAVORITE_SAVE" resultType="int">
        insert into
        favoritecheck(user_id, info_num)
        values(#{user_id},#{info_num})
    </select>

</mapper>